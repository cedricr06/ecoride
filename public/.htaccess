<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Servir les assets depuis /public/ quand on demande /assets|css|js|images|img|fonts|vendor
  RewriteRule ^(assets|css|js|images|img|fonts|vendor)/(.*)$ public/$1/$2 [L]

  # Fichier/dossier existant -> pas de réécriture
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Tout le reste vers public/index.php
  RewriteRule ^ public/index.php [QSA,L]
</IfModule>


